<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/activityBackgroundColor"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/activity_main_txtVw_title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TIC TAC PRO"
        android:layout_centerHorizontal="true"
        style="@style/RemainingTime" />

    <ImageButton
        android:id="@+id/activity_main_imgBtn_play_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/play_button"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:background="@null"/>

    <LinearLayout
        android:id="@+id/activity_main_lnrLyt_buttonPanel_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_main_imgBtn_play_id"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_centerInParent="true">

        <ImageButton
            android:id="@+id/activity_main_imgBtn_star_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_button"
            android:background="@null"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/activity_main_imgBtn_difficulty_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/difficulty"
            android:background="@null"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/activity_main_imgBtn_sound_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/volume_high"
            android:background="@null"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/activity_main_imgBtn_help_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/help"
            android:background="@null"
            android:layout_weight="1"/>

    </LinearLayout>


</RelativeLayout>